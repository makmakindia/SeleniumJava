		/* 
		 2 3 4 
		 1 4 5 
		 7 2 0
 
		 * */
		int m[][]= {{2,3,4},{1,4,5},{7,2,0}};
		int min=m[0][0];
		int cmin=0;
		
		for(int i=0;i<3;i++)
		{
			for(int j=0;j<3;j++) {
				
				System.out.println("array value : "+m[i][j]);
			if(m[i][j]<min) {
				min=m[i][j];
				cmin=j;
				
			}
			}
			}
		
		System.out.println("Maximum value in array : "+min);
		System.out.println("minmum number column : "+(cmin+1));
		
	}

}
