		/* 
		 2 3 4 
		 1 4 5 
		 7 2 0
 
		 * */
		int m[][]= {{2,3,4},{1,4,5},{7,2,0}};
		int min=m[0][0];
		int cmin=0;
		int maxval=0;
		
		
		for(int i=0;i<3;i++)
		{
			for(int j=0;j<3;j++) {
				
				System.out.println("array value : "+m[i][j]);
			if(m[i][j]<min) {
				min=m[i][j];
				cmin=j;
								
			}
			}
			}
		
		
		

	for(int k=0; k<3; k++) {
		 // System.out.println(" k: "+k+"cmin: "+cmin+" matrix val : "+m[k][cmin]);
		
		if(m[k][cmin]>min) {
			
			maxval=m[k][cmin];
			
		}
	
		
	}
	System.out.println("Minimum  value in array  min : "+min);
	System.out.println("minmum number column cmin : "+(cmin));
	System.out.println(" Max valu in "+cmin+"nd colum is  maxval "+maxval);
	}
}
